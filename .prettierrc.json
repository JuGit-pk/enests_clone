{
  "semi": false,
  "trailingComma": "es5",
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "jsxSingleQuote": true,

  "endOfLine": "lf",
  "printWidth": 80,
  "arrowParens": "always",
  "importOrder": [
    "^react",
    "^next",
    "^@?\\w",
    "^(@|components)(/.*|$)",
    "^\\u0000",
    "^\\.\\.(?!/?$)",
    "^\\.\\./?$",
    "^\\./(?=.*/)(?!/?$)",
    "^\\.(?!/?$)",
    "^\\./?$",
    "^.+\\.?(css)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
